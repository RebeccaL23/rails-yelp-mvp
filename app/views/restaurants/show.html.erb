<div class='restaurant'>
  <div class='restaurant_details'>
    <h1><%= @restaurant.name %></h1>
    <h3><%= @restaurant.address %></h3>
    <h3><%= @restaurant.phone_number %></h3>
  </div>

  <div class='category'><%= @restaurant.category %></div>
</div>

<div class='review'>
  <h2>Reviews</h2>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.rating %></li>
      <li class="list-group-item"><%= review.content %></li>
    <% end %>
  </ul>
</div>

<%= link_to "Back to list", restaurants_path %>
